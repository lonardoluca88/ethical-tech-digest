
# Abilita il modulo di rewrite per gestire le SPA
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /lovablenews/
  
  # Mantieni i file statici come sono (senza reindirizzamento)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Reindirizza tutto il resto a index.html
  RewriteRule ^ index.html [L]
</IfModule>

# Imposta intestazioni per la cache dei file statici
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/gif "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType text/css "access plus 1 week"
  ExpiresByType application/javascript "access plus 1 week"
</IfModule>

# Abilita CORS per il widget
<IfModule mod_headers.c>
  <FilesMatch "\.(js|css|html)$">
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type"
    Header set X-Content-Type-Options "nosniff"
  </FilesMatch>
</IfModule>

# Imposta content-type per i file JavaScript
<IfModule mod_mime.c>
  AddType application/javascript .js
  AddType text/css .css
  AddType text/html .html
</IfModule>

# Compressione gzip per migliorare le prestazioni
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript text/javascript application/x-javascript text/xml application/xml application/xml+rss text/javascript
</IfModule>
