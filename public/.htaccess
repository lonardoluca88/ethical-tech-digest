
# Abilita il modulo di rewrite per gestire le SPA
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /lovablenews/
  
  # Mantieni i file statici come sono (senza reindirizzamento)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Reindirizza tutto il resto a index.html
  RewriteRule ^ index.html [L]
</IfModule>

# Imposta intestazioni per la cache dei file statici
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Abilita CORS per il widget
<IfModule mod_headers.c>
  <FilesMatch "\.(js|css)$">
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET"
    Header set Access-Control-Allow-Headers "Content-Type"
  </FilesMatch>
</IfModule>
