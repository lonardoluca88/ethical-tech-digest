
<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade">
    <name>mod_ethical_tech_digest</name>
    <author>LovableAI</author>
    <creationDate>April 2025</creationDate>
    <copyright>Copyright (C) 2025 All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>info@example.com</authorEmail>
    <authorUrl>https://example.com</authorUrl>
    <version>1.0.0</version>
    <description>MOD_ETHICAL_TECH_DIGEST_XML_DESCRIPTION</description>
    
    <files>
        <filename module="mod_ethical_tech_digest">mod_ethical_tech_digest.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
        <folder>media</folder>
    </files>
    
    <languages>
        <language tag="en-GB">language/en-GB/mod_ethical_tech_digest.ini</language>
        <language tag="en-GB">language/en-GB/mod_ethical_tech_digest.sys.ini</language>
    </languages>
    
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="theme"
                    type="list"
                    label="Theme"
                    description="Choose the widget theme"
                    default="light"
                >
                    <option value="light">Light</option>
                    <option value="dark">Dark</option>
                </field>
                
                <field
                    name="categories"
                    type="checkboxes"
                    label="Categories"
                    description="Select which categories to display"
                    multiple="true"
                >
                    <option value="ai">Artificial Intelligence</option>
                    <option value="robotics">Robotics</option>
                    <option value="biotech">Biotechnology</option>
                </field>
                
                <field
                    name="height"
                    type="text"
                    label="Height"
                    description="Height of the iframe in pixels"
                    default="800"
                />
                
                <field
                    name="method"
                    type="list"
                    label="Integration Method"
                    description="Choose the integration method"
                    default="iframe"
                >
                    <option value="iframe">iFrame (recommended)</option>
                    <option value="script">JavaScript Script</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
