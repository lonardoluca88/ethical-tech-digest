
<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade">
    <name>mod_ethical_tech_digest</name>
    <author>LovableAI</author>
    <creationDate>April 2025</creationDate>
    <copyright>Copyright (C) 2025 All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>info@example.com</authorEmail>
    <authorUrl>https://example.com</authorUrl>
    <version>1.0.0</version>
    <description>Modulo per visualizzare il widget Ethical Tech Digest</description>
    
    <files>
        <filename module="mod_ethical_tech_digest">mod_ethical_tech_digest.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
    
    <media destination="mod_ethical_tech_digest">
        <folder>css</folder>
        <folder>js</folder>
        <filename>index.html</filename>
    </media>
    
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="theme"
                    type="list"
                    label="Tema"
                    description="Scegli il tema del widget"
                    default="light"
                >
                    <option value="light">Chiaro</option>
                    <option value="dark">Scuro</option>
                </field>
                
                <field
                    name="categories"
                    type="checkboxes"
                    label="Categorie"
                    description="Seleziona le categorie da mostrare"
                    multiple="true"
                >
                    <option value="ai">Intelligenza Artificiale</option>
                    <option value="robotics">Robotica</option>
                    <option value="biotech">Biotecnologia</option>
                </field>
                
                <field
                    name="height"
                    type="text"
                    label="Altezza"
                    description="Altezza dell'iframe in pixel"
                    default="800"
                />
                
                <field
                    name="method"
                    type="list"
                    label="Metodo"
                    description="Scegli il metodo di integrazione"
                    default="iframe"
                >
                    <option value="iframe">iFrame (consigliato)</option>
                    <option value="script">Script JS</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
